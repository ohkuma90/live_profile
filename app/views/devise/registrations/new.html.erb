<div class="registrations-form">
  <div class="form-area">
    <div class="main-area">
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <div class="input-area">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder:"例) ライブタロウ", maxlength:"20" %>
        </div>
        <div class="input-area">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="input-area">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="input-area">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder:"同じパスワードを入力" %>
        </div>
        <div class="input-area">
          <%= f.label "XのID", class: "form-label" %>
          <%= f.password_field :x_id, class: "form-control" %>
        </div>
        <h3 class="form-message">プロフィール用質問</h3>
        <div class="input-area">
          <%= f.label "何年の代？", class: "form-label" %>
          <%= f.password_field :birth, class: "form-control", placeholder:"例) 97", maxlength:"2" %>
        </div>
        <div class="input-area">
          <%= f.label "みんなからは何て呼ばれる？", class: "form-label" %>
          <%= f.password_field :nickname, class: "form-control" %>
        </div>
        <div class="input-area">
          <%= f.label "好きな食べ物は？", class: "form-label" %>
          <%= f.password_field :favorite_food, class: "form-control" %>
        </div>
        <div class="input-area">
          <%= f.label "苦手な食べ物は？", class: "form-label" %>
          <%= f.password_field :hated_food, class: "form-control" %>
        </div>
        <div class="input-area">
          <%= f.label "休みの日は何をして過ごす？", class: "form-label" %>
          <%= f.password_field :holiday, class: "form-control" %>
        </div>
        <div class="input-area">
          <%= f.label "趣味は？", class: "form-label" %>
          <%= f.password_field :hobby, class: "form-control" %>
        </div>
        <div class="input-area">
          <%= f.label "初めて好きになったバンドは？", class: "form-label" %>
          <%= f.password_field :first_band, class: "form-control" %>
        </div>
        <div class="input-area">
          <%= f.label "初めていったライブは？", class: "form-label" %>
          <%= f.password_field :first_live, class: "form-control" %>
        </div>
          <%= f.submit "Sign Up", class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>