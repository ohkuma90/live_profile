<div class="registrations-form">
  <div class="form-area">
    <h3 class="form-message">ログイン</h3>
    <div class="main-area">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="input-area">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder:"live-profile@○○○○" %>
        </div>
        <div class="input-area">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", placeholder:"6文字以上の半角英数字" %>
        </div>
        <%= f.submit "Log In", class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>